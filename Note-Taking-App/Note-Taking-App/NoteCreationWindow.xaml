<Window x:Class="Note_Taking_App.NoteCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Note_Taking_App"
        mc:Ignorable="d"
        Title="NoteCreationWindow" Height="400" Width="400">
    <Grid>
        <Label Content="Note Name" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" FontSize="50"/>
        <TextBox x:Name="NoteName" Text="" KeyDown="NoteName_KeyDown" MinWidth="300" FontSize="16" Padding="10 5 10 5" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        <Button Click="Cancel_Click" Content="Cancel" HorizontalAlignment="Left" Margin="67,287,0,0" VerticalAlignment="Top" Height="49" Width="129" FontSize="25"/>
        <Button Click="Continue_Click" Content="Continue" HorizontalAlignment="Left" Margin="204,287,0,0" VerticalAlignment="Top" Height="49" Width="129" FontSize="25"/>

    </Grid>
</Window>
